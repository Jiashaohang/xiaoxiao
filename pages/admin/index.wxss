.all_container{
  width: 100vw;
  height: auto;
}
.top_container{
  width: 90vw;
  margin: auto;
  padding-bottom: 0.5em;
  border-bottom: 1rpx solid #CCCCCC;
}
.title{
  font-size: 40rpx;
  font-weight: 600;
  margin: 0.5em 0;
}
.derc{
  width: 5em;
  height: 2em;
  color: #FF3700;
  text-align: center;
  border-radius: 3rpx;
  border: 1rpx solid #FF3700;
  font-size: 20rpx;
  line-height: 2em;
}
.top_container .detail {
  display: flex;
  color: #CCCCCC;

}
.top_container .detail view{
  margin-right: 0.8em;
}
.icon{
  width: 1em;
  height: 1em;
}
.bottom_container{
  width: 90vw;
  margin: auto;
}
.img_container{
  width: 100%;
  height: 30vh;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 0.5em;
}
.news{
  width: 100%;
  height: 100%;
}
