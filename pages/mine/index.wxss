
button::after {
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

button {
  text-align: left;
  width: 10em;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 40rpx;
  padding-left: 1em;
  background-color: transparent !important;
  padding: 0 !important;
  line-height: inherit !important;
  margin: 0 !important;
  width: auto !important;
  font-weight: 500 !important;
  border-radius: none !important;
}
.bgimg{
  width: 60vw;
  height: 60vw;
  background: #F3F8FE;
  border-radius: 50%;
  position: absolute;
  z-index: -99;
  top: 60!important;
  left: 30!important;
}
.bgimg1{
  width: 30vw;
  height: 30vw;
  background: #F3F8FE;
  border-radius: 50%;
  position: absolute;
  z-index: -99;
  top: 100!important;
  right: -50!important;
}

.userInfo {
  position: relative;
  width: 100vw;
  padding: 3vh 0 3vh 8vw;
  display: flex;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userName {
  width: 10em;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 40rpx;
  padding-left: 1em;
}

.order {
  width: 100vw;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
}

.order .left {
  width: 40vw;
  border-right: 0.5px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.order .right {
  width: 40vw;
  border-left: 0.5px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

i-row{
  margin: 0.5em 0;
}

.col-class {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: auto;
}

.title {
  font-size: 28rpx;
  line-height: 34rpx;
  padding: 0.5em 0;
}

.entrence {
  width: 86vw;
  margin: 22rpx auto;
  /* border: 1px solid #8a8a8a; */
  background: white;
  padding: 1em 0.5em;
  border-radius: 10rpx;
}
i-cell-group{
  font-size: 28rpx;
  font-weight: 500;
}